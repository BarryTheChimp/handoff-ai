{
  "name": "handoff-ai",
  "version": "0.1.0",
  "private": true,
  "description": "The bridge between product specs and developer-ready work",
  "author": "Toucan Labs",
  "license": "UNLICENSED",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test:run --workspaces --if-present",
    "test:unit": "npm run test:run --workspaces --if-present",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "npm run lint --workspaces --if-present",
    "setup": "bash scripts/setup.sh",
    "db:start": "docker-compose up -d db",
    "db:stop": "docker-compose down",
    "db:migrate": "npm run migrate --workspace=backend"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
